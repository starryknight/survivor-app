<h1>Create New Medical State</h1>

<form action="/survivor/{{survivorId}}/medical" method="POST">

    <div class="form-group">
        <label for="type"> type</label>
        <input type="type" class="form-control" id="type" name="type" aria-describedby="emailHelp" placeholder="type">
    </div>
    <div class="form-group">
        <label for="frequency">Frequency</label>
        <input type="frequency" class="form-control" id="frequency" name="frequency" placeholder="frequency">
    </div>
    <div class="form-group">
        <label for="quantity">quantity</label>
        <input type="quantity" name="quantity" class="form-control" id="exampleInputPassword1" placeholder="quantity">
    </div>
    <div class="form-group">

        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Complete</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit Medical State</button>
</form>