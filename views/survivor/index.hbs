<h1 class="welcome">International Red-Flag Organization</h1>
<h1 class="welcome">Volunteer Please check in any survivors here, Thank You</h1>



<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="http://www.inkfreenews.com/wp-content/uploads/2015/10/Motorcycle-US-30-e1445474111943-800x400.jpg"
        alt="First slide">

    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSm8ywMNcNhfICZ7P3B-nsLK4UoYEfT0491WZeRqLhCPhs6OEkxWQ"
        alt="Second slide">

    </div>
    <div class="carousel-caption d-none d-md-block">
      <h5>When you need us we'll be there</h5>
      <p>Lean on us</p>
    </div>
  </div>
  <div class="carousel-item">
    <img class="d-block w-100" src="https://microage.com/wp-content/uploads/2016/02/iStock_000050238532_Large-800x400.jpg" alt="Third slide">


  </div>

  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

</div>
</div>
<section id="arranger">
  {{#each listOfSurvivors}}
  <div id="scroller">
    <div class="card" style="width: 12rem;">
      <img class="card-img-top" src="{{photo}}" alt="Card image cap">

      <div class="card-body">
        <h5 class="card-title">{{firstName}}...{{sex}}</h5>
        <p class="card-text">{{description}}...</p>
        <a href="/survivor/{{_id}}" class="btn btn-primary">See details</a>
        <a href="/survivor/{{_id}}/edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
  {{/each}}
</section>

<form action="/survivor/new">
  <input class="btn btn-danger btn-lg" type="submit" value="Create a New Survivor" />
</form>
