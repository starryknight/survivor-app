    <h1>
        <a href="/survivor" class="btn btn-primary">Home</a>
    </h1>
    <h2 class="text-center"> Edit Form for: {{survivorInstance.firstName}}
        <span>{{survivorInstance.lastName}}</span>
    </h2>
    <h2 class="text-center">
        <img class="mx-auto mb-2" src="{{survivorInstance.photo}}" alt="">
    </h2>

    <div class="container">

        <div class="py-5 text-center">


            <p class="lead">Please Enter the current details for the survivor below</p>
        </div>
        <form action="/survivor/{{survivorInstance._id}}?_method=PUT" method="POST">

            <div class="row">
                <div class="col-md-4 order-md-2 mb-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Equipment Required</span>
                        {{#each survivorInstance.equipments}}
                        <span class="badge badge-secondary badge-pill">Qty: {{quantity}}</span>
                    </h4>
                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">Type</h6>
                                <small class="text-muted">{{type}}</small>
                            </div>
                            <span class="text-muted">Size: {{size}}</span>
                        </li>
                    </ul>
                    <div>
                        <img id="photo" name="photo" src="{{picture}}" alt="">
                    </div>

                    {{/each}} 
                    <a class="btn btn-primary" href="/survivor/{{survivorInstance._id}}/equipment/new" class="col-md-6 mb-3">
                                 Add new equipment
                            </a>
                    {{#each survivorInstance.medicals}}
                    <ul class="list-group mb-3">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Medication Required</span>
                            <span class="badge badge-secondary badge-pill">Qty: {{quantity}}</span>
                        </h4>


                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-success">
                                <h6 class="my-0">Prescription</h6>
                                <small>{{type}}</small>
                            </div>

                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Frequency</span>
                            <strong>Take {{frequency}}</strong>
                        </li>
                        
                        {{/each}}
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Patient's ailment</span>
                            <strong>{{survivorInstance.diagnosis}}</strong>
                        </li>
                        <a href="/survivor/{{survivorInstance._id}}/medication/new" class="col-md-6 mb-3">
                                 <button type="submit" class="btn btn-primary">Add New Medication</button>
                            </a>
                    </ul>
                
                </div>

                <div class="col-md-8 order-md-1">

                    <form class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName">First name</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" value="{{survivorInstance.firstName}}" placeholder=""
                                    value="" required>
                                <div class="invalid-feedback">
                                    Valid first name is required.
                                </div>
                            </div>
                            
                        </div>

                        <div class="mb-3">
                            <label for="username">Picture</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@</span>
                                </div>
                                <input type="text" class="form-control" id="photo" name="photo" placeholder="picture">

                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="username">Location Victim was Found</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@</span>
                                </div>
                                <input type="text" class="form-control" placeholder="location" id="location" name="location" value="{{survivorInstance.location}}">

                            </div>
                        </div>


                        <div class="mb-3">
                            <label for="description">description</label>
                            <input type="text" class="form-control" id="description" name="description" value="{{survivorInstance.description}}" placeholder="record description..."
                                required>
                            <div class="invalid-feedback">
                                Please enter the survivor's description.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="diagnosis">diagnosis
                                <span class="text-muted">(Optional)</span>
                            </label>            
                            <input type="text" class="form-control" id="diagnosis" value="{{survivorInstance.diagnosis}}" " placeholder="diagnosis ">            
                        </div>
                        </form>
            <div class="row ">
              <div class="col-md-3 mb-3 ">
                <label for="sex ">Sex</label>
                <select class="custom-select d-block w-100 " id="sex " required>
                  <option value=" ">Choose...</option>
                  <option>Male</option>
                  <option>Female</option>
                </select>
                
              </div>
              <div class="col-md-4 mb-3 ">
                <label for="date">Date Discovered</label>
                    <input type="date" class="form-control " id="date " value="{{survivorInstance.dateOfBirth}}">

                <div class="invalid-feedback ">
                  Please provide a valid sex.
                </div>
              </div>
              <div class="col-md-5 mb-3 ">
                <label for="zip ">SSN  Last 4</label>
                <input type="text " class="form-control " id="ssn " value="{{survivorInstance.ssn}} ">
              </div>
            </div>
            
            
            <button class="btn btn-danger btn-lg btn-block " type="submit ">Submit Form</button>
          
        </div>
      

      
    </div>
</form>